std::vector<double> toStdVector(const Eigen::VectorXd& vec) {
    std::vector<double> std_vec(vec.rows());
    for (int i = 0; i < vec.size(); i++) {
        std_vec[i] = vec(i);
    }
    return std_vec;
}
